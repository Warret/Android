<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/red_color"
        android:layout_width="117dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_color" />

    <LinearLayout
        android:id="@+id/yellow_color"
        android:layout_width="117dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_color" />

    <Button
        android:id="@+id/button"
        android:layout_width="161dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:onClick="StartOrStop"
        android:text="@string/start"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_color" />

    <LinearLayout
        android:id="@+id/green_color"
        android:layout_width="117dp"
        android:layout_height="105dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>